{% extends 'base.html.twig' %}

{% block title %}Pokemons{% endblock %}

{% block body %}
    <h1>Pokemons</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Numero</th>
                <td>{{ pokemon.numero }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ pokemon.nombre }}</td>
            </tr>
            <tr>
                <th>Tipo</th>
                <td>{{ pokemon.tipo }}</td>
            </tr>
            <tr>
                <th>Imagen</th>
                <td>{{ pokemon.imagen }}</td>
            </tr>
        </tbody>
    </table>

<br>
    <a href="{{ path('app_pokedex_capturar', {'numero': pokemon.id }) }}">Capturar pokemon</a>
    <br>
    <br>
    <a href="{{ path('app_main') }}">Dejar libre</a>
{% endblock %}
