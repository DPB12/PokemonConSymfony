{% extends 'base.html.twig' %}

{% block title %}Batallas index{% endblock %}

{% block body %}
    <h1>Batallas index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>PokemonEnemigo</th>
                <th>Resultado</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for batalla in batallas %}
            <tr>
                <td>{{ batalla.id }}</td>
                <td>{{ batalla.pokemonEnemigo }}</td>
                <td>{{ batalla.resultado }}</td>
                <td>
                    <a href="{{ path('app_batallas_show', {'id': batalla.id}) }}">show</a>
                    <a href="{{ path('app_batallas_edit', {'id': batalla.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_batallas_new') }}">Create new</a>
{% endblock %}
